<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Adicionar novo</a>
</div>

<ul class="admin-posts">

    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/editt-post/<%= post._id %>" class="btn">Editar</a>

                <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Excluir" class="btn">
                </form>
            </div>
        </li>
    <% }) %>

</ul>